@model MovieApp.Entity.TheatreModel
@{
    ViewData["Title"] = "DeleteTheatre";
}


<a asp-action="ShowTheatre" asp-controller="Theatre">Theatre Details</a>

<h1>Delete Theatre</h1>

<form method="post">

    <div class="form-group">
        <label for="ThreatreId">ThreatreId</label>
        <input type="text" class="form-control" asp-for="TheatreId" />
    </div>
    <div class="form-group">
        <label for="ThreatreName">ThreatreName</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label for="City">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>


    <input type="submit" class="btn btn-primary" value="Delete">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }

</form>